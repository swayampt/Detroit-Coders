    Author: ExperienceIT group2
    Date: 12/16/21
    Description: Register.cshtml used to create registration fields for Sign Up page.
*@

@page
@using ExperienceIT.Web.Utility
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";  /*Add this extra line code to connect authlayout*/
}
<style>
    body {
        background-color: azure;
    }
</style>

<form method="post" asp-route-returnUrl="@Model.ReturnUrl">
    <div class="col-md-6"><span style="color:#ff0000">* </span><i>is required field</i></div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <br />
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="Input.FirstName" class="col-form-label">First Name <span style="color:#ff0000">*</span></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="Input.LastName" class="col-form-label">Last Name <span style="color:#ff0000">*</span></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-1"></div>
    </div>

    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="Input.Email" class="col-form-label">Email <span style="color:#ff0000">*</span></label>
                <input asp-for="Input.Email" class="form-control" placeholder="example@yourmail.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="Input.PhoneNumber" class="col-form-label">Phone Number</label>
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="+1 (000)-000-0000" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-1"></div>
    </div>

    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="Input.Password" class="col-form-label">Password <span style="color:#ff0000">*</span></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="col-form-label">Confirm Password <span style="color:#ff0000">*</span></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-1"></div>
    </div>

    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="Input.StreetAddress" class="col-form-label">Street Address</label>
                <input asp-for="Input.StreetAddress" class="form-control" />
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="Input.City" class="col-form-label"></label>
                <input asp-for="Input.City" class="form-control" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-1"></div>
    </div>

    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="Input.State" class="col-form-label"></label>
                <input asp-for="Input.State" class="form-control" placeholder="MI" />
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="Input.Zipcode" class="col-form-label">Zip Code</label>
                <input asp-for="Input.Zipcode" class="form-control" />
                <span asp-validation-for="Input.Zipcode" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-1"></div>
    </div>

    @*Radio button added for Volunteer User and Student User*@
    <div class="row">
        <div class="col-md-5 offset-sm-1 form-group">
            <label class="col-form-label align-content-end">
                <span>Choose Registration Type <span style="color:#ff0000">*</span></span>
            </label>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="col-form-label">
                    <input type="radio" checked  name="rdUserRole" value="@SD.VolunteerUser" /> @SD.VolunteerUser
                </label>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="col-form-label">
                    @*When student role is introduced, the disabled attribute will be removed from the below radio button and the
        below volunteer div tag has to be hidden using  style="display:none;". In each role radio button the ShowStudent Script has to be called and
        the corresponding data elements div has to be toggled to show / hide*@
                    <input type="radio" disabled onclick="ShowStudent()" name="rdUserRole" value="@SD.StudentUser" /> @SD.StudentUser
                </label>
            </div>
        </div>
    </div>

    <br />

    <div class="volunteer" >
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-md-5">
                <div class="form-group">
                    <label asp-for="Input.Skills" class="col-form-label">Skills<span style="color:#ff0000">*</span></label>
                    <input asp-for="Input.Skills" name="Skills" class="form-control" />
                    <span asp-validation-for="Input.Skills" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label asp-for="Input.YearsOfExperience" class="col-form-label">Years Of Experience<span style="color:#ff0000">*</span></label>
                    <input asp-for="Input.YearsOfExperience" name="YearsOfExperience" class="form-control" />
                    <span asp-validation-for="Input.YearsOfExperience" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-1"></div>
        </div>

        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-md-5">
                <div class="form-group">
                    <label asp-for="Input.WorkPlace" class="col-form-label">Work Place<span style="color:#ff0000">*</span></label>
                    @Html.DropDownListFor(s=> s.Input.WorkPlace,
                    new SelectList(Model.Organizations, "Id", "Name"), "--Select One--", new { @class = "form-control" })
                    <span asp-validation-for="Input.WorkPlace" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <br/>

    <div class="row">
        <div class="col-md-6 form-group offset-md-3">
            <button type="submit" class="btn btn-primary form-control"><b>Save</b></button>
        </div>
    </div>
</form>
<br/><br/><br/><br/>

@section Scripts {
<partial name="_ValidationScriptsPartial" />

@*JS code added to show extra required fields only for volunteer User*@
<script type="text/javascript">
    function ShowVolunteer() {
        $('.volunteer').show();
    }

    function ShowStudent() {
        $('.volunteer').hide();
    }

</script>
}
