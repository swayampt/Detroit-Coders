@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    body {
        background-color: azure;
    }
</style>

<br />


<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <form method="post">
                <br />
                <div class="row">
                    <div class="col-md-6 form-group offset-md-4 text-info"><h2>Forgot your Password</h2></div>
                </div>
                <br/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-3"></div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <br /><br/>
                <div class="row">
                    <div class="col-md-6 form-group offset-md-3">
                        <button type="submit" class="btn btn-primary form-control"><b>Save</b></button>
                    </div>
                </div>
                <br/><br/>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
