@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<style>
    body {
        background-color: azure;
    }
</style>
<br />
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <form id="change-password-form" method="post">
                <br />
                <div class="row">
                    <div class="col-md-6 form-group offset-md-4 text-info"><h2>Change Password</h2></div>
                </div>
                <partial name="_StatusMessage" model="Model.StatusMessage" />
                <br />
                <div class="row">
                    <div class="col-sm-3"></div>
                    <div class="col-md-6">
                        <div class="form-group">
                             <label asp-for="Input.OldPassword"></label>
                             <input asp-for="Input.OldPassword" class="form-control" />
                             <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>
                    </div>
                 </div>

                 <div class="row">
                    <div class="col-sm-3"></div>
                    <div class="col-md-6">
                        <div class="form-group">
                             <label asp-for="Input.NewPassword"></label>
                             <input asp-for="Input.NewPassword" class="form-control" />
                             <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>
                    </div>
                 </div>

                 <div class="row">
                    <div class="col-sm-3"></div>
                    <div class="col-md-6">
                        <div class="form-group">
                             <label asp-for="Input.ConfirmPassword"></label>
                             <input asp-for="Input.ConfirmPassword" class="form-control" />
                             <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                 </div>

                 <br />

                <div class="row">
                    <div class="col-md-6 form-group offset-md-3">
                        <button type="submit" class="btn btn-primary form-control"><b>Save</b></button>
                    </div>
                </div>
                <br/><br/>
              </form>
            </div>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}