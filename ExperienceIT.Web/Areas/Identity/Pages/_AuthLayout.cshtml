    Description: _AuthLayout.cshtml is a razor layout created to bring together Log In and Sign Up pages to one card with toggled tabbed menu.
*@

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<br/>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href='/Identity/Account/Login'><h4 style="color:#28a745"><b>Log In</b></h4></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href='/Identity/Account/Register'><h4 style="color:#007bff"><b>Sign Up</b></h4></a>
                    </li>
                </ul>
            </div>
            <br/>

            <div class="card-content">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>


@section Scripts {
    @RenderSection("Scripts", required: false)

@*This JQuery function is used to toggle Log In/Sign Up tabbed menu*@
<script>
    $(function () {
        var current = location.pathname;
        $('.nav-tabs li a').each(function () {
            var $this = $(this);
            if (current.indexOf($this.attr('href')) !== -1) {
                $this.addClass('active');
            }
        })
    })
</script>
}