@*Author: ExperienceIT group2
    Description: Events-Delete.cshtml used to delete the event .*@

@model ExperienceIT.Web.Models.EventMaster

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="card">
            <form enctype="multipart/form-data" asp-action="Delete">
                <br />
                <div class="row">
                    <div class="col-md-6 form-group offset-md-5 align-content-md-center text-info"><h2>Delete Event</h2></div>
                </div>
                <br />
                <input type="hidden" asp-for="Id" />
                <h3 class="offset-1">Are you sure you want to delete this?</h3>
                <br />

                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <b>@Html.DisplayNameFor(model => model.Name) :</b>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.DisplayFor(model => model.Name)
                        </div>
                    </div>
                    <div class="col-sm-1"></div>
                </div>

                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <b>@Html.DisplayNameFor(model => model.Description) :</b>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.DisplayFor(model => model.Description)
                        </div>
                    </div>
                    <div class="col-sm-1"></div>
                </div>

                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <b>@Html.DisplayNameFor(model => model.StartingDate) :</b>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.DisplayFor(model => model.StartingDate)
                        </div>
                    </div>
                    <div class="col-sm-1"></div>
                </div>

                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <b>@Html.DisplayNameFor(model => model.EndingDate) :</b>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.DisplayFor(model => model.EndingDate)
                        </div>
                    </div>
                    <div class="col-sm-1"></div>
                </div>

                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <b>@Html.DisplayNameFor(model => model.Venue) :</b>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.DisplayFor(model => model.Venue)
                        </div>
                    </div>
                    <div class="col-sm-1"></div>
                </div>

                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <b>@Html.DisplayNameFor(model => model.Duration) :</b>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.DisplayFor(model => model.Duration)
                        </div>
                    </div>
                    <div class="col-sm-1"></div>
                </div>

                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <b>@Html.DisplayNameFor(model => model.ImageUrl) :</b>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <img src="@Model.ImageUrl" width="75" height="75" />
                        </div>
                    </div>
                    <div class="col-sm-1"></div>
                </div>

                <br />

                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger form-control"><b>Delete</b></button>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div>
                            <a asp-action="Index" class="btn btn-info form-control"><b>Back to List</b></a>
                        </div>
                        <div class="col-sm-1"></div>
                    </div>
                </div>
                <br />
            </form>
        </div>
    </div>
</div>
