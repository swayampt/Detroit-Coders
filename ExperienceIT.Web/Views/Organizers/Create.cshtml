@*Author: ExperienceIT group2
    Description:Sponsor-Create.cshtml used to Create the new Sponsor .*@

@model ProgramOrganizerViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<div class="card w-75" style="margin-left:160px">
    <form asp-action="Create" method="post">

        <div class="row">
            <div class="col-md-6 form-group offset-md-5 align-content-md-center text-info"><h2>Our Sponsors</h2></div>
        </div>

        <div class="col-md-4 ml-4"><span style="color:#ff0000">* </span><i>is required field</i></div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">

            <div class="col-md-4 col-xs-6">
                <label asp-for="Organizer.Name" class="col-form-label ml-5">Sponsoring Company<span style="color:#ff0000">*</span></label>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-8">
                <input asp-for="Organizer.Name" class="form-control" style="width:342px" />
            </div>
            <span asp-validation-for="Organizer.Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-md-4 col-xs-6">
                <label asp-for="Organizer.Address" class="col-form-label ml-5"></label>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-8">
                <input asp-for="Organizer.Address" class="form-control" style="width:342px" />
            </div>
            @Html.ValidationMessageFor(model => model.Organizer.Address, "", new { @class = "text-danger" })
        </div>

        <div class="form-group row">
            <div class="col-md-4 col-xs-6">
                <label asp-for="Organizer.City" class="col-form-label ml-5"></label>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-8">
                <input asp-for="Organizer.City" class="form-control" style="width:342px" />
            </div>
            <span asp-validation-for="Organizer.City" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-md-4 col-xs-6">
                <label asp-for="Organizer.State" class="col-form-label ml-5"></label>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-8">
                <input asp-for="Organizer.State" class="form-control" style="width:342px" />
            </div>
            <span asp-validation-for="Organizer.State" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-md-4 col-xs-6">
                <label asp-for="Organizer.Zipcode" class="col-form-label ml-5"></label>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-8">
                <input asp-for="Organizer.Zipcode" class="form-control" style="width:342px" />
            </div>
            <span asp-validation-for="Organizer.Zipcode" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-md-4 col-xs-6">
                <label asp-for="Organizer.Country" class="col-form-label ml-5"></label>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-8">
                <input asp-for="Organizer.Country" class="form-control" style="width:342px" />
            </div>
            <span asp-validation-for="Organizer.Country" class="text-danger"></span>
        </div>
        <br/>
        <div class="d-flex justify-content-center align-items-center">
            <input type="submit" value="Create" class="btn btn-primary mx-2 px-4" />
            <a asp-action="Index" class="btn btn-info mx-3">Back to List </a>
        </div>
        <br />
        <br />
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}











